{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "rootDir": "src",
        "outDir": "./dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*"]
}
